# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to git

# Supabase Configuration
# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Anthropic API Key (for AI features)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Gong API Credentials (for transcript import)
GONG_ACCESS_KEY=your_gong_access_key_here
GONG_SECRET_KEY=your_gong_secret_key_here

# Google Drive API Configuration (for content generation)
# Follow GOOGLE_DRIVE_SETUP.md for detailed setup instructions
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_private_key_here\n-----END PRIVATE KEY-----\n"
GOOGLE_DRIVE_FOLDER_ID=your_sales_folder_id_from_drive_url

# NextAuth Configuration (for Google OAuth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_random_32_char_string_using_openssl_rand_base64_32

# Feature Flags
# Set to 'false' to use localStorage instead of Supabase (fallback mode)
NEXT_PUBLIC_USE_SUPABASE=true
